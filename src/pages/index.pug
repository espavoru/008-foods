extends ../pug/layout.pug

append config
  -
    currentTitle = 'Foods'
    currentDescription = 'Foods page'
    currentUrl = 'index.html'

block header
  nav.navbar.target
    a.navbar__link(href='#')
      i.fas.fa-home
      span Home
    a.navbar__link(href='#')
      i.fas.fa-utensils
      span Meals
    a.navbar__link(href='#')
      i.fas.fa-hamburger
      span Burger
    a.navbar__link(href='#')
      i.fas.fa-pizza-slice
      span Pizza
    a.navbar__link(href='#')
      i.fas.fa-blender-phone
      span Contact

  ///.navbar

  i.menu.target

